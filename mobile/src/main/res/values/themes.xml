<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Light" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/light_primary_color</item>
        <item name="colorPrimaryDark">@color/light_primary_color_dark</item>
        <item name="colorAccent">@color/light_accent_color</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background_light</item>
    </style>

    <style name="Theme.Dark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_dark</item>
        <item name="colorAccent">@color/dark_accent_color</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background_dark</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="colorPrimary">@color/light_primary_color</item>
        <item name="colorPrimaryDark">@color/light_primary_color_dark</item>
        <item name="colorAccent">@color/light_accent_color</item>
    </style>
</resources>
